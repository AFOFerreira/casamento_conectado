<?xml version="1.0" encoding="utf-8" ?>
<Border
	x:Class="casamento_conectado.Widgets.CardQuantidade"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Name="thisCardQuantidade"
	Grid.Row="0"
	Grid.Column="0"
	Padding="0"
	BackgroundColor="White"
	HeightRequest="80"
	StrokeShape="RoundRectangle 10"
	StrokeThickness="1">
	<Border.Shadow>
		<Shadow
			Opacity="0.4"
			Radius="3"
			Offset="-0,5" />
	</Border.Shadow>
	<Grid
		BackgroundColor="White"
		IsClippedToBounds="True"
		RowDefinitions="80*,Auto"
		RowSpacing="0">

		<Label
			Margin="0,10,0,0"
			FontAttributes="Bold"
			FontSize="30"
			HorizontalOptions="Center"
			Text="{Binding Quantidade, Source={x:Reference thisCardQuantidade}}"
			TextColor="{Binding ColorValue, Source={x:Reference thisCardQuantidade}}"
			VerticalOptions="Center" />

		<Label
			Grid.Row="1"
			Margin="0,0,0,10"
			FontAttributes="Bold"
			FontSize="10"
			HorizontalOptions="Center"
			Text="{Binding Titulo, Source={x:Reference thisCardQuantidade}}"
			TextColor="{Binding ColorTitulo, Source={x:Reference thisCardQuantidade}}"
			VerticalOptions="Start" />
	</Grid>
</Border>